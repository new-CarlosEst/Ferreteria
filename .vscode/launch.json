{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "pathMappings": {
                // RUTA CRÍTICA: Necesitas mapear la carpeta de tu código local 
                // con la carpeta donde está ese código DENTRO del contenedor.
                // Reemplaza "/var/www/html" si tu código está en otra carpeta.
                "${workspaceRoot}": "/var/www/html" 
            }
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9003
        }
    ]
}